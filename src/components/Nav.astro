---
import NavShell from '@components/NavShell.astro';
---

<NavShell>
  <button
    class="active font-medium text-congress-900 transition-colors ease-in-out hover:text-congress-950"
    data-nav-id="hero"
    data-nav-scroll-to="home">
    Home
  </button>
  <button
    class="font-medium text-congress-900 transition-colors ease-in-out hover:text-congress-950"
    data-nav-id="about-me">
    About me
  </button>
  <button
    id="projects-nav-item"
    class="font-medium text-congress-900 transition-colors ease-in-out hover:text-congress-950"
    data-nav-id="projects">
    Projects
  </button>
  <button
    class="font-medium text-congress-900 transition-colors ease-in-out hover:text-congress-950"
    data-nav-id="contact">
    Contact
  </button>
</NavShell>

<style>
  .active {
    @apply font-bold italic text-congress-950;
  }
</style>

<script src="@scripts/nav.ts"></script>
