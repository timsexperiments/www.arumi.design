---
import { Icon } from 'astro-icon/components';

type Props = {
  hide?: (1 | 2 | 3)[];
};

let hide1 = '';
let hide2 = '';
let hide3 = '';

const { hide } = Astro.props;

if (hide?.includes(1)) {
  hide1 = 'hidden';
}
if (hide?.includes(2)) {
  hide2 = 'hidden';
}
if (hide?.includes(3)) {
  hide3 = 'hidden';
}
---

<Icon
  class:list={[
    'absolute right-0 top-0 -z-20 h-32 w-auto text-autumn-300 sm:h-48 md:h-60',
    hide1,
  ]}
  name="squigly-1"
/>
<Icon
  class:list={[
    'absolute right-5 top-[130px] -z-20 h-auto w-[50px] text-autumn-200 sm:right-7 sm:top-[188px] sm:w-[76px] md:right-8 md:top-[232px] md:w-24',
    hide1,
  ]}
  name="squigly-1-accent"
/>

<Icon
  class:list={[
    'opactiy-50 sm:opactiy-1 absolute left-0 top-72 -z-20 h-auto w-[154px] text-autumn-200 sm:w-48 md:w-60',
    hide2,
  ]}
  name="squigly-2"
/>
<Icon
  class:list={[
    'opactiy-50 sm:opactiy-1 absolute left-[65px] top-[436px] -z-20 h-auto w-[58px] text-autumn-300 sm:left-[82px] sm:top-[480px] sm:w-[73px] md:left-[102px] md:top-[534px] md:w-[92px]',
    hide2,
  ]}
  name="squigly-2-accent"
/>

<Icon
  class:list={[
    'absolute bottom-0 -z-20 h-auto w-[324px] text-autumn-200/50',
    hide3,
  ]}
  name="squigly-3-accent"
/>

<Icon
  class:list={[
    'absolute bottom-0 -z-20 h-auto w-[448px] max-w-full text-autumn-300/50',
    hide3,
  ]}
  name="squigly-3"
/>
