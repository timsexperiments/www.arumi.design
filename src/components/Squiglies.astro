---
import { Icon } from 'astro-icon/components';

type Props = {
  hide?: (1 | 2 | 3)[];
};

let hide1 = '';
let hide2 = '';
let hide3 = '';

const { hide } = Astro.props;

if (hide?.includes(1)) {
  hide1 = 'hidden';
}
if (hide?.includes(2)) {
  hide2 = 'hidden';
}
if (hide?.includes(3)) {
  hide3 = 'hidden';
}
---

<Icon
  class:list={[
    'absolute right-0 top-0 -z-20 h-32 sm:h-48 md:h-60 w-auto text-autumn-300',
    hide1,
  ]}
  name="squigly-1"
/>
<Icon
  class:list={[
    'absolute right-5 top-[130px] sm:right-7 md:right-8 sm:top-[188px] md:top-[232px] -z-20 h-auto w-[50px] sm:w-[76px] md:w-24 text-autumn-200',
    hide1,
  ]}
  name="squigly-1-accent"
/>
<Icon
  class:list={[
    'absolute left-0 top-72 -z-20 h-auto w-60 text-autumn-200',
    hide2,
  ]}
  name="squigly-2"
/>
<Icon
  class:list={[
    'absolute left-[102px] top-[534px] -z-20 h-auto w-[92px] text-autumn-300',
    hide2,
  ]}
  name="squigly-2-accent"
/>

<Icon
  class:list={[
    'absolute bottom-0 -z-20 h-auto w-[324px] text-autumn-200/50',
    hide3,
  ]}
  name="squigly-3-accent"
/>

<Icon
  class:list={[
    'absolute bottom-0 -z-20 h-auto w-[448px] max-w-full text-autumn-300/50',
    hide3,
  ]}
  name="squigly-3"
/>
