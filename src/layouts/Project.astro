---
import Animate from '@components/Animate.astro';
import BaseHead from '@components/BaseHead.astro';
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Squiglies from '@components/Squiglies.astro';
import ProjectsNav from '@components/projects/ProjectsNav.astro';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import { imageHero } from '../images';

type Props = CollectionEntry<'projects'>['data'] & {
  slug: CollectionEntry<'projects'>['slug'];
};

const { title, description, role, client, slug } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <Animate />
  </head>

  <body class="relative">
    <Header />
    <main class="w-full px-4 sm:px-16 md:px-32">
      <h1
        id="top"
        class="mb-2 translate-y-[200%] text-4xl font-extrabold text-congress-950 opacity-0 md:text-5xl"
        data-animate-in>
        {title}
      </h1>
      <div
        class="mb-6 translate-y-[200%] space-x-2 text-xl font-medium opacity-0 delay-150"
        data-animate-in>
        <span>
          {role}
        </span>
        <span>|</span>
        <span>
          {client}
        </span>
      </div>
      <Image
        class="mx-auto mb-20 mt-16 translate-y-1/2 opacity-0 delay-300"
        data-animate-in
        src={imageHero(slug)}
        alt={title}
      />
      <article
        class="prose-custom prose w-full max-w-full translate-y-4 opacity-0"
        data-animate-in>
        <slot />
      </article>
    </main>
    <Footer />
    <Squiglies />
    <ProjectsNav slug={slug} />
    <style is:global>
      .prose-custom {
        @apply prose-headings:text-congress-950 prose-p:text-congress-900 prose-strong:text-congress-900 prose-ul:text-congress-900 prose-li:my-0 prose-li:marker:text-congress-900 prose-hr:my-16 prose-hr:border-t-2 prose-hr:border-congress-950 md:prose-h2:text-3xl;
      }
    </style>
  </body>
</html>
